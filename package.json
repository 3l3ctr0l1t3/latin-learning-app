{
  "name": "latin-learning-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@latin-app/web",
    "dev:mobile": "npm run start --workspace=@latin-app/mobile",
    "build:web": "npm run build --workspace=@latin-app/web",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "2": "^3.0.0"
  }
}
